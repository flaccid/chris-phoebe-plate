WORKING_DIR := $(shell pwd)

.DEFAULT_GOAL := serve

.PHONY: serve

build:: ## builds the jekyll project
		@jekyll build

serve:: ## runs jeykyll server
		@jekyll serve --livereload

# A help target including self-documenting targets (see the awk statement)
define HELP_TEXT
Usage: make [TARGET]... [MAKEVAR1=SOMETHING]...

Available targets:
endef
export HELP_TEXT
help: ## this help target
	@cat .banner
	@echo
	@echo "$$HELP_TEXT"
	@awk 'BEGIN {FS = ":.*?## "} /^[a-zA-Z_-]+:.*?## / \
		{printf "\033[36m%-30s\033[0m  %s\n", $$1, $$2}' $(MAKEFILE_LIST)0
